@model Book
@inject IStringLocalizer<SharedResource> localizer
@{
    ViewData["Title"] = "Deleting Book";
}
<div class="mt-3" text-primary">
    <h2>@localizer["Deleting Book"]</h2>
</div>
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <input asp-for=Image hidden/>
        <input asp-for="pdfFileName" hidden />

        <div class="col-md-6">
            <label asp-for="Name" class="form-label mt-4 fw-bold"></label>
            <input asp-for="Name" class="form-control bg-light" disabled>
        </div>
        <div class="col-md-6">
            <label asp-for="shelf" class="form-label fw-bold pt-1"></label>
            <select  asp-for="ShelfId" class="form-select bg-light" asp-items="@ViewBag.Shelveslist" readonly  >
            </select>
        </div>
       
        <div class="col-md-6 mt-3">
            <input  type="submit" value="@localizer["Delete"]" class="btn btn-danger" />
            <a class="btn btn-outline-secondary" asp-controller="Book" asp-action="Index" asp-route-ShelfId="@Model.ShelfId">@localizer["Back"]</a>

        </div>
    </form>
</div>


