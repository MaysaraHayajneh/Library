@using Library.PresentationLayer.ViewModel

@model BookVM
@{
    ViewData["Title"] = "Add Book";
}

@inject IStringLocalizer<SharedResource> localizer
@{
    var Culture = CultureInfo.CurrentCulture.Name;
}

<div class="mt-3" text-primary">
    <h2>@localizer["Adding Book"]</h2>
</div>
<div class="row">
    <form method="post" enctype="multipart/form-data">

        <div class="col-md-6">
            <label asp-for="@Model.Book.Name"  class="form-label mt-4 fw-bold"></label>
            <input asp-for="@Model.Book.Name" class="form-control bg-light">
            <span asp-validation-for="@Model.Book.Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Book.ArabicName" class="form-label mt-4 fw-bold"></label>
            <input asp-for="@Model.Book.ArabicName" class="form-control bg-light">
            <span asp-validation-for="@Model.Book.ArabicName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Book.FrenchName" class="form-label mt-4 fw-bold"></label>
            <input asp-for="@Model.Book.FrenchName" class="form-control bg-light">
            <span asp-validation-for="@Model.Book.FrenchName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Book.price" class="form-label mt-4 fw-bold"></label>
            <input asp-for="@Model.Book.price" class="form-control bg-light">
            <span asp-validation-for="@Model.Book.price" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Book.Author" class="form-label mt-4 fw-bold"></label>
            <input asp-for="@Model.Book.Author" class="form-control bg-light">
            <span asp-validation-for="@Model.Book.Author" class="text-danger"></span>
            
        </div>

        <div class="col-md-6" >
            <label asp-for="@Model.Book.shelf" class="form-label fw-bold pt-1"></label>
            <select asp-for="@Model.Book.ShelfId" class=" form-select bg-light" asp-items="@(Culture == "ar-JO" ? Model.shelves[1] : Culture == "fr-CA" ? Model.shelves[2] : Model.shelves[0])">
                
            </select >

        </div>
        <div class="col-md-6">
            <label asp-for="@Model.Book.ImgFormFile" class="m-2 fw-bold"></label>
           <input asp-for="@Model.Book.ImgFormFile"  class="form-control" accept="image/*" />
            <span asp-validation-for="@Model.Book.ImgFormFile" class="text-danger"></span>
        </div>
       

        <div class="col-md-6">
            <label asp-for="@Model.Book.pdfFormFile" class="m-2 fw-bold"></label>
           <input asp-for="@Model.Book.pdfFormFile"  class="form-control" accept=".pdf" />
           <span asp-validation-for="@Model.Book.pdfFormFile" class="text-danger"></span>
        </div>
       
        <div class="col-md-6 mt-3">
            <input type="submit" value="@localizer["Add"]" class="btn btn-primary" />
            <a class="btn btn-outline-secondary w-auto" asp-controller="Book" asp-action="Index" >@localizer["Back"]</a>
        </div>
    </form>
 </div>


