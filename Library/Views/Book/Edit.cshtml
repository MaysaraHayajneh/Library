@model Book
@inject IStringLocalizer<SharedResource> localizer
@{
    var Culture = CultureInfo.CurrentCulture.Name;
}
@{
    ViewData["Title"] = "Editing Book";
}

<div class="mt-3" text-primary">
    <h2>@localizer["Editing Book"]</h2>
</div>
<div class="row">
    <div class="col-lg-6">
        <form method="post" enctype="multipart/form-data">
            <input asp-for="Id" hidden />
            <input asp-for=Image hidden />
            <input asp-for="pdfFileName" hidden />

            <div>
                <label asp-for="Name" class="form-label mt-4 fw-bold"></label>
                <input asp-for="Name" class="form-control bg-body-tertiary">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="ArabicName" class="form-label mt-4 fw-bold"></label>
                <input asp-for="ArabicName" class="form-control bg-body-tertiary">
                <span asp-validation-for="ArabicName" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="FrenchName" class="form-label mt-4 fw-bold"></label>
                <input asp-for="FrenchName" class="form-control bg-body-tertiary">
                <span asp-validation-for="FrenchName" class="text-danger"></span>
            </div>
            <div >
                <label asp-for="Author" class="form-label mt-4 fw-bold"></label>
                <input asp-for="Author" class="form-control bg-body-tertiary">
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="price" class="form-label mt-4 fw-bold"></label>
                <input asp-for="price" class="form-control bg-body-tertiary">
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="shelf" class="form-label fw-bold pt-1"></label>
                <select asp-for="ShelfId" class="form-select bg-body-tertiary" asp-items="@(Culture=="ar-JO"?ViewBag.ShelvesList[1]:Culture=="fr-CA"?ViewBag.ShelvesList[2]:ViewBag.ShelvesList[0])">
                    <option selected>--select shelf--</option>
                </select>

            </div>
            <div>
                <label asp-for="ImgFormFile" class="m-2 fw-bold"></label>
                <input asp-for="ImgFormFile" class="form-control bg-body-tertiary" accept="image/*" />
                <span class="text-danger" asp-validation-for="ImgFormFile"></span>

            </div>

            <div class="col-md-6">
                <label asp-for="pdfFormFile" class="m-2 fw-bold"></label>
                <input asp-for="pdfFormFile" class="form-control bg-body-tertiary" accept=".pdf" />
                <span class="text-danger" asp-validation-for="pdfFormFile"></span>
            </div>
            <div class="mt-3">
                <input type="submit" value="@localizer["Update"]" class="btn btn-primary" />
                <a class="btn btn-outline-secondary " asp-controller="Book" asp-action="Index" asp-route-ShelfId="@Model.ShelfId">@localizer["Back"]</a>

            </div>
        </form>
    </div>
    <div class="col-6 text-center ">
        <img  src="@Model.Image" alt="Alternate text" style="width:400px;"  />
    </div>
</div>



