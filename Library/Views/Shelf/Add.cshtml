@model Shelf
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = "Add Shelf";
}
<div class="mt-3" text-primary">
    <h2>@localizer["Adding Shelf"]</h2>
</div>
<div class="row">
    <form method="post">

        <div class="col-md-6">
            <label asp-for="EnglishName"  class="form-label mt-4 fw-bold"></label>
            <input asp-for="EnglishName" class="form-control bg-light">
            <span asp-validation-for="EnglishName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="ArabicName" class="form-label mt-4 fw-bold"></label>
            <input asp-for="ArabicName" class="form-control bg-light">
            <span asp-validation-for="ArabicName" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="FrenchName" class="form-label mt-4 fw-bold"></label>
            <input asp-for="FrenchName" class="form-control bg-light">
            <span asp-validation-for="FrenchName" class="text-danger"></span>
        </div>
        <div class="col-md-6 mt-3 ">
            <div>
                <label class="form-check-label" asp-for="IsAvalible"></label>
            </div>
            <div class="form-check">
                <input class="form-check-input" style="position:fixed;" type="checkbox" value="True" asp-for="IsAvalible">
            </div>
        </div>
        <div class="col-md-6 mt-3">
            <input type="submit" value="@localizer["Add"]" class="btn btn-primary" />
            <a class="btn btn-outline-secondary" asp-controller="Shelf" asp-action="Index">@localizer["Back"]</a>
        </div>
    </form>
</div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial"></partial>
    }
