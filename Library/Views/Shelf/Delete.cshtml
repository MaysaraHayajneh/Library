
@inject IViewLocalizer localizer
@model Shelf
@{
    ViewData["Title"] = "Delete Shelfs";
}
<div class="mt-3" text-primary">
    <h2>@localizer["Deleting Shelf"]</h2>
</div>
<div class="row">
    <form method="post" enctype="multipart/form-data">
        <input asp-for=Id hidden />
        <div class="col-md-6">
            <label asp-for="EnglishName" class="form-label mt-4 fw-bold"></label>
            <input asp-for="EnglishName" class="form-control bg-light" disabled>
        </div>
        <div class="col-md-6 mt-3">
            <input type="submit" value="@localizer["Delete"]" class="btn btn-danger" />
            <a class="btn btn-outline-secondary" asp-controller="Shelf" asp-action="Index">@localizer["Back"]</a>
        </div>
    </form>

