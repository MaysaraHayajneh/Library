@using Library.ViewModel

@model EditRole
@{
	ViewData["Title"] = "Edit Role";
}

<div class="row d-flex align-items-center justify-content-center">
	<div class="col-md-3 card p-4">
		<h2 class="text-center text-info">Edit Role</h2>
		<form method="post">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="mb-1">
				<label asp-for="Id"></label>
				<input asp-for="Id" class="form-control" readonly />
				<span asp-validation-for="Id" class="text-danger"></span>
			</div>
			<div class="mb-1">
				<label asp-for="RoleName"></label>
				<input asp-for="RoleName" class="form-control" />
				<span asp-validation-for="RoleName" class="text-danger"></span>
			</div>
			<div class=" form-group row mt-3">
				<div class="col-sm-10">
					<input type="submit" value="Update" class="btn btn-primary " />
					<a asp-controller="Admin" asp-action="ListRole" class="btn btn-primary"> back</a>
				</div>
			</div>
			
		</form>

		<div class="card mt-5">
			<div class="card-header">
				<h3>Users In this Role</h3>
			</div>
			<div class="card-body">
				@if (Model.Users.Any())
				{
					foreach(var user in Model.Users)
					{
						<h6 class="card-title">@user</h6>
					}

				}
				else
				{
					<h6 class="text-dark">None at the moment</h6>
				}
			</div>
			<div class="card-footer">
				<a asp-controller="Admin" asp-action="EditUsersInRole"asp-route-roleId="@Model.Id" class="btn btn-secondary" style="width:auto;">Add or remove user</a>
				
			</div>


		</div>
	</div>
</div>