@model List<UserRoles>

@{
	
	var UserId = ViewBag.UserId;
}
<form method="post">
	<div class="card">
		<div class="card-header">
			<h3>Manage User Roles</h3>
			<h5 class="text-dark"> User: @ViewBag.UserName</h5>
		</div>
		<div class="card-header">
			@for(int i = 0; i < Model.Count; i++)
			{
				<div class="form-check mt-1">
					<input asp-for="@UserId" hidden/>
					<input asp-for="@Model[i].RoleId" hidden />
					<input asp-for="@Model[i].RoleName" hidden />
					<input asp-for="@Model[i].IsSelected" class="form-check-input" />
					<label asp-for="@Model[i].IsSelected" class=" form-check-label">@Model[i].RoleName</label>
				</div>
			}

			<div asp-validation-summary="All"></div>

		</div>
		<div class="card-footer">
			<input type="submit" value="update" class="btn btn-primary" style="width:auto" />
			<a asp-controller="Admin" asp-action="ListUsers" asp-route-id="@UserId" class="btn btn-secondary" style="width:auto">Cancel</a>
		</div>
	</div>
</form>
	