@using Library.ViewModel
@model List<UserRole>

@{
	var roleId = ViewBag.RoleId;
}
<form method="post">
	<div class="card">
		<div class="card-header">
			<h3>Add or remove users from this role</h3>
		</div>
		<div class="card-body">
			@for(int i=0;i<Model.Count;i++)
			{
				<div class="form-check m-1">
						<input asp-for="@roleId" hidden />
						<input asp-for="@Model[i].UserName" hidden />
						<input asp-for="@Model[i].UserId" hidden />
						<input asp-for="@Model[i].IsSelected" class="form-check-input" />
						<label class="form-check-label">
							@Model[i].UserName
						</label>
					
				</div>

			}


		</div>
		<div class="card-footer">
			<input type="submit" value="update" class="btn btn-primary" style="width:auto"/>
			<a asp-controller="Admin" asp-action="EditRole" asp-route-id="@roleId" class="btn-secondary" style="width:auto">Cancel</a>
		</div>
	</div>


</form>